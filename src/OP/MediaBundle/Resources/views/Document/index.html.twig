<h1>Document list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Alt</th>
            <th>Path</th>
            <th>Size</th>
            <th>Createdat</th>
            <th>Updateat</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for document in documents %}
        <tr>
            <td><a href="{{ path('document_show', { 'id': document.id }) }}">{{ document.id }}</a></td>
            <td>{{ document.alt }}</td>
            <td>{{ document.path }}</td>
            <td>{{ document.size }}</td>
            <td>{% if document.createdAt %}{{ document.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if document.updateAt %}{{ document.updateAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('document_show', { 'id': document.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('document_edit', { 'id': document.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('document_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
