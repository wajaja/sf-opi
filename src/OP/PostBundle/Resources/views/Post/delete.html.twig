{# src/OP/OpposedPostBundle/Resources/views/OpposedPost/delete.html.twig #}

{% extends "OPOpposedPostBundle::layout.html.twig" %}

{% block title %}
  delete this - {{ parent() }}
{% endblock %}

{% block op_opposedpost_body %}

  <h2>delete this</h2>

  <p>
    ...Etes-vous certain de vouloir supprimer l'annonce "{{ opposedpost.title }}" ?
  </p>

  {# On met l'id de l'annonce dans la route de l'action du formulaire #}

  <form action="{{ path('op_opposed_post_delete', {'id': opposedpost.id}) }}" method="post">
    <a href="{{ path('op_opposed_post_view', {'id': opposedpost.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Return to post
    </a>
    {# Ici j'ai écrit le bouton de soumission à la main #}
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {# Ceci va générer le champ CSRF #}

    {# boutstrap à ajouter plus tard #}
    {{ form_rest(form) }}

  </form>

{% endblock %}