<h1>Pshare list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Postid</th>
            <th>Picture</th>
            <th>Author</th>
            <th>Message</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for document in documents %}
        <tr>
            <td><a href="{{ path('pshare_show', { 'id': document.id }) }}">{{ document.id }}</a></td>
            <td>{{ document.postId }}</td>
            <td>{{ document.picture }}</td>
            <td>{{ document.author }}</td>
            <td>{{ document.message }}</td>
            <td>{{ document.status }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('pshare_show', { 'id': document.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('pshare_edit', { 'id': document.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('pshare_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
