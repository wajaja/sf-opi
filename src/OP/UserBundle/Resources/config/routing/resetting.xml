<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="op_user_resetting_request" path="/request" methods="GET" host="opinion.com">
        <default key="_controller">OPUserBundle:Resetting:request</default>
    </route>

    <route id="op_user_resetting_send_email" path="/send-email" methods="POST" host="opinion.com">
        <default key="_controller">OPUserBundle:Resetting:sendEmail</default>
    </route>

    <route id="op_user_resetting_check_email" path="/check-email" methods="GET" host="opinion.com">
        <default key="_controller">OPUserBundle:Resetting:checkEmail</default>
    </route>

    <route id="op_user_resetting_reset" path="/reset/{token}" methods="GET POST" host="opinion.com">
        <default key="_controller">OPUserBundle:Resetting:reset</default>
    </route>



    <route id="op_user_resetting_request_m" path="/request" methods="GET" host="m.opinion.com">
        <default key="_controller">OPUserBundle:Mobile:Resetting:request</default>
    </route>

    <route id="op_user_resetting_send_email_m" path="/send-email" methods="POST" host="m.opinion.com">
        <default key="_controller">OPUserBundle:Mobile:Resetting:sendEmail</default>
    </route>

    <route id="op_user_resetting_check_email_m" path="/check-email" methods="GET" host="m.opinion.com">
        <default key="_controller">OPUserBundle:Mobile:Resetting:checkEmail</default>
    </route>

    <route id="op_user_resetting_reset_m" path="/reset/{token}" methods="GET POST" host="m.opinion.com">
        <default key="_controller">OPUserBundle:Mobile:Resetting:reset</default>
    </route>

</routes>
